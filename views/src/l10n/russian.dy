import std.math
import std.traits


nothrow pure @safe @nogc:

enum Number: ubyte
    singular,
    paucal,
    plural,


Number getNumber(I)(I number) if (isIntegral!I)
    number %= 100
    static if (isSigned!I)
        number = abs(number)
    if (number <= 4 || number >= 21)
        switch (number % 10)
            case 2, 3, 4: return Number.paucal
            case 1: return Number.singular
            default: break
    return Number.plural
